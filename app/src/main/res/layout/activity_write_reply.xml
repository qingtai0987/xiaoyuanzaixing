<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.WriteReplyActivity">

    <android.support.v7.widget.Toolbar
        android:background="@color/toolbar_color"
        android:layout_gravity="top"
        android:id="@+id/toolbar_sharepage"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_write_ewply_toolbar_return"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textSize="@dimen/page_toolbar_return_size"
                android:textColor="@color/theme_light_green"
                android:text="返回"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/page_toolbar_title_size"
                android:layout_centerInParent="true"
                android:textColor="@android:color/black"
                android:text="帖子详情"/>

            <TextView
                android:id="@+id/tv_write_reply_submint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textSize="@dimen/page_toolbar_return_size"
                android:textColor="@color/theme_light_green"
                android:text="返回"
                android:layout_marginRight="@dimen/page_margin_edge_horizontaol"/>

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_marginRight="@dimen/page_margin_edge_horizontaol"
        android:layout_marginLeft="@dimen/page_margin_edge_horizontaol"
        android:layout_marginBottom="@dimen/page_margin_edge_vertical"
        android:layout_marginTop="@dimen/page_margin_edge_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:gravity="top"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </ScrollView>

    <LinearLayout
        android:layout_marginLeft="@dimen/page_margin_edge_horizontaol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/comment_press"/>

    </LinearLayout>



</LinearLayout>
